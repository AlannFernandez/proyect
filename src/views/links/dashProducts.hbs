{{#if user.company}}
    {{#if products}}
    <table id="tableProducts" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Acción</th>
                
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{title}}</td>
                <td>{{category}}</td>
                <td>${{price}}</td>
                <td><a class="waves-effect waves-light btn modal-trigger" href="#action{{id}}">A</a>
                <div id="action{{id}}" class="modal">
                    <div class="modal-content">
                        <div class="prdoptmdl"><a href="/links/viewProduct/{{id}}"class="waves-effect waves-light btn-small"><i class="ri-eye-line"></i> Ver</a></div>
                        <div class="prdoptmdl"><a class="waves-effect waves-light orange lighten-2 btn-small"><i class="ri-pencil-line"></i> Editar</a></div>
                        <div class="prdoptmdl"><a href="/links/delete/{{id}}/{{img}}"class="waves-effect waves-light red btn-small"><i class="ri-delete-bin-line"></i> Eliminar</a></div>
                        <div class="prdoptmdl"><a class="waves-effect waves-light blue btn-small"><i class="ri-refund-2-fill"></i> Añadir descuento</a></div>
                    </div>
                        
                </div>
                </td>
                
            </tr>
            {{/each}}
        </tbody>
        
    </table>
    {{/if}}
{{else}}
{{/if}}