<div class="container">
    <!-- Left content -->
    <div class="container__left">
        <section class="">

    

      <style>
        .link-black a {
          color: black;
        }

        .link-black a:hover {
          color: #0056b3;
        }

        .link-black .active {
          color: #0056b3;
        }

        .divider-small {
          width: 30px;
          background-color: rgba(0, 0, 0, .1);
          height: 3px;
        }
      </style>


      <!--Grid row-->
      <div class="row d-flex justify-content-center">

        <!--Grid column-->
        <div class="col-lg-9 col-md-5 col-sm-12 border p-4">

          <!-- Filter panel -->
          <div class="mb-5">
            <h5 class="font-weight-bold mb-3">Ordenar por</h5>

            <div class="divider-small mb-3"></div>

            <ul class="list-unstyled link-black">
              <li class="mb-2">
                <a href="" class="active">Por defecto</a>
              </li>              
              <li class="mb-2">
                <a href="" class="">Mejor puntuación</a>
              </li>
              <li class="mb-2">
                <a href="" class="">Menor precio</a>
              </li>
              <li class="mb-2">
                <a href="" class="">Mayor precio</a>
              </li>
            </ul>
          </div>
          <!-- Filter panel -->

          <!-- Filter panel -->
          <div class="mb-5">

            <h5 class="font-weight-bold mb-3">Categorias</h5>

            <div class="divider-small mb-3"></div>

            <div class="form-check fa-sm mb-1">
              <input type="radio" class="form-check-input" id="materialGroupExample1" name="groupOfMaterialRadios" checked>
              <label class="form-check-label" for="materialGroupExample1">Todos</label>
            </div>

            <div class="form-check fa-sm mb-1">
              <input type="radio" class="form-check-input" id="materialGroupExample2" name="groupOfMaterialRadios">
              <label class="form-check-label" for="materialGroupExample2">Categoría 1</label>
            </div>

            <div class="form-check fa-sm mb-1">
              <input type="radio" class="form-check-input" id="materialGroupExample3" name="groupOfMaterialRadios">
              <label class="form-check-label" for="materialGroupExample3">Categoría 2</label>
            </div>

            <div class="form-check fa-sm mb-1">
              <input type="radio" class="form-check-input" id="materialGroupExample4" name="groupOfMaterialRadios">
              <label class="form-check-label" for="materialGroupExample4">Categoría 3</label>
            </div>

          </div>
          <!-- Filter panel -->

          <!-- Filter panel -->
          <div class="mb-5">

            <h5 class="font-weight-bold mb-3">Precio</h5>

            <div class="divider-small mb-3"></div>

            <form class="range-field">
              <input type="range" min="0" max="319" />
            </form>

            <div class="row justify-content-center">

              <!-- Grid column -->
              <div class="col-md-6 text-left">
                <p class="dark-grey-text"><strong id="resellerEarnings">0$</strong></p>
              </div>
              <!-- Grid column -->

              <!-- Grid column -->
              <div class="col-md-6 text-right">
                <p class="dark-grey-text"><strong id="clientPrice">319$</strong></p>
              </div>
              <!-- Grid column -->
            </div>

          </div>
          <!-- Filter panel -->

          <!-- Filter panel -->
          <div class="link-black">

            <h5 class="font-weight-bold mb-3">Puntuación</h5>

            <div class="divider-small mb-3"></div>

            <div class="amber-text fa-sm mb-1">
            <a href="" class="ml-2 active">Buena</a>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              
            </div>

            <div class="amber-text fa-sm mb-1">
              <a href="" class="ml-2">Media</a>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              
              
            </div>

            <div class="amber-text fa-sm mb-1">
              <a href="" class="ml-2">Baja </a>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              
              
            </div>

          </div>
          <!-- Filter panel -->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->


    </section>
    </div>

    <!-- Right content -->
    <div class="container__right">
       <section class="text-center">


      <!--Grid row-->
      <div class="row">
        {{#each result}}
        <!--Grid column-->
        <div class="col-lg-4 col-md-12 mb-4">

          <!-- Card -->
          <div class="card" id="card">

            <!-- Card image -->
            <div class="view overlay">
              <img class="card-img-top" src="../uploads/{{img}}"
                alt="Card image cap">
              <a href="#!">
                <div class="mask rgba-white-slight"></div>
              </a>
            </div>

            <!-- Card content -->
            <div class="card-body">

              <p class="mb-1"><a href="" class="font-weight-bold black-text">{{title}}</a></p>

              <p class="mb-1"><small class="mr-1"><s>${{price}}</s></small><strong id="">$99</strong></p>

              <div class="amber-text fa-xs mb-1">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
              </div>

              <button type="button" class="btn btn-primary btn-rounded btn-sm px-3">Comprar ahora</button>
              <button type="button" class="btn btn-outline-primary btn-rounded btn-sm px-3 waves-effect " value="add" id="{{id}}" onclick="add(this.id);">Agregar al carrito</button>

            </div>

          </div>
          <!-- Card -->


        </div>
        <!--Grid column-->
        {{else}}
        <div class="text-center">
          <lord-icon
            src="https://cdn.lordicon.com/hrqwmuhr.json"
            trigger="hover"
            colors="primary:#121331,secondary:#eb4d4b"
            style="width:250px;height:250px">
          </lord-icon>
          <p>Ups al parecer no se encontrarón resultados</p>
        </div>
        {{/each}}        
      </div>
      <!--Grid row-->
    
       
    </section>
    <!--Section: Content-->
    </div>
</div>
<style>
    .container {
    display: flex;
}

.container__left {
    flex: 1;
    max-width: 30%;
}
.container__right {
    flex: 1;
}
</style>